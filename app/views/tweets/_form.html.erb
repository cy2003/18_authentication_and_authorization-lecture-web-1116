<% if @tweet.errors.any? %>
  <% @tweet.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_for(@tweet) do |f| %>
  <!-- <label for="tweet_content">Content</label> -->
  <%= f.label :content %>

  <%= f.text_field :content, required: true %>
  <%= f.submit %>
<% end %>
